<div class="card card_cities">
    <div class="cities__content">
        <div class="row cities__row">
            <ul class="cities__list">
                {{#if cities}}
                    {{#each cities}}
                        <li class="cities__item">
                            <span class="cities__city-name">{{this.city}}</span>
                            <span class="cities__city-description">{{this.region}}</span>
                            <span class="cities__item-del js-cities__item-del">+</span>
                        </li>
                    {{/each}}
                {{else}}
                    <li class="cities__item">
                        <span class="cities__city-name">Города не добавлены</span>
                    </li>
                {{/if}}
            </ul>
        </div>
        <div class="row cities__add-city-row">
            <button class="btn cities__add-city-btn">Добавить город</button>
            <input class="input cities__add-city-input" placeholder="Название города" style="display:none">
        </div>
    </div>
</div>

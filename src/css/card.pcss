.card {
    border-radius: 5px;
    box-shadow: 0 6px 9px 0 #777;
    width: 100%;

    &--map {
        height: 100%;
        position: relative;
    }

    &__close-btn {
        position: absolute;
        right: 5px;
        top: 5px;
        z-index: 99;
        cursor: pointer;
        font-size: 18px;
        width: 30px;
        height: 30px;
        fill: var(--my-blue);
    }
}

.search {
    display: flex;
    padding: 0 20px;

    &__input {
        border-bottom: 1px solid #bbb;
        border-top-left-radius: 5px;
        width: 100%;
        font-size: 1em;
        height: 35px;
    }

    &__btn {
        border-top-right-radius: 5px;
        width: auto;
        flex-shrink: 0;
    }
}
